  <input type="submit" value="Submit" ng-click='getData()'>


<table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Last Name</th>
                <th>StudentID</th>
                <th>Phone</th>
                <th>Address</th>
               <th>Action</th>

              </tr>
            </thead>
          <tbody>
              <tr ng-repeat="data in Data">
                <td>{[{data.name}]}</td>
                <td>{[{data.lastName}]}</td>
                <td>{[{data.studentId}]}</td>
                <td>{[{data.phone}]}</td>
                <td>{[{data.address}]}</td>
                <td><button type="button" class="btn btn-danger" ng-click="deleteStudent(data)">Delete</button>
             
              </tr>
              

            </tbody>
          </table>

</div>
